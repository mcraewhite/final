<h1>Explore Rules!
<span class="pull-right">
  <%= link_to "New Rule", new_rule_path, class: 'btn btn-lg btn-success' %>
</span>
</h1>
<div class="row">
  <% @rules.each do |rule| %>
    <div class="col-sm-6 col-md-4">
      <div class="caption">
        <h3>
          <%= rule.rule_name %>
          <span class="pull-right">
              <%= link_to "Edit Rule", edit_rule_path(rule), class: 'btn btn-sm btn-primary' %>
              <%= link_to "Delete Rule", rule_path(rule), method: :Delete, data: { confirm: "Are you sure you want to delete this Rule?"}, class: 'btn btn-sm btn-danger' %>
          </span>
        </h3>
        <p><%= rule.rule_description %></p>
      </div>
    </div>
  <% end %>
</div>