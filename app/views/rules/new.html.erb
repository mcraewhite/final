<%= form_for @rule do |form| %>
  <div class="form-group">
    <%= form.label :rule_name %>
    <%= form.text_field :rule_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :rule_description %>
    <%= form.text_field :rule_description, class: "form-control" %>
  </div>
  <%= form.button 'Create Rule', class: "btn btn-success" %>
<% end %>