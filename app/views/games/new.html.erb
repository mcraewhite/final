<%= form_for @game do |form| %>
  <div class="form-group">
    <%= form.label :gametype_id %>
    <%= form.collection_select :gametype_id, GameType.all, :id, :type_name, {include_blank: true}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= form.label :game_name %>
    <%= form.text_field :game_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :game_desc %>
    <%= form.text_area :game_desc, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :game_image %>
    <%= form.text_field :game_image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :rule_names %>
    <%= form.collection_check_boxes :rule_ids, Rule.all, :id, :rule_name, {}, {class: "form-control"} do |b| %>
        <%= b.label(class: "check_box") do %>
          <div class="col-xs-8">
            <%= b.check_box(class: "check_box") %>
          </div>

          <div class="col-xs-8">
            <%= b.object.rule_name %>
          </div>       
        <% end %>
    <% end %>
  </div>
  <%= form.button 'Create Game', class: "btn btn-success" %>
<% end %>