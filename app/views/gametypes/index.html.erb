<div class="row">
  <% @game_types.each do |type| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= link_to image_tag(type.type_image, width: 100), type %>
        <div class="caption">
          <h3><%= link_to type.type_name, type %></h3>
          <p><%= type.type_desc %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>