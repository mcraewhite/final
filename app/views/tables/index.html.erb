<h1>Pick a table to play at or start your own!
<span class="pull-right">
  <%= link_to "New Table", new_table_path, class: 'btn btn-lg btn-success' %>
</span>
</h1>
<div class="row">
  <% @tables.each do |table| %>
    <div class="col-sm-6 col-md-4">
      <div class="caption">
        <h3>
          <%= table.id %>. <%= table.table_name %>, Open Seats <%= table.open_seats %>/<%= table.max_seats %>
        </h3>
        <p><%= link_to image_tag("table.png"), table %></p>
      </div>
    </div>
  <% end %>
</div>